<p style="color: green"><%= notice %></p>

<h1><%= Publisher.model_name.human %></h1>

<%= render @publisher %>

<div>
  <%= link_to t("view.show.move_to_update", model: Publisher.model_name.human), edit_publisher_path(@publisher) %> |
  <%= link_to t("view.show.move_to_index", model: Publisher.model_name.human.pluralize), publishers_path %>

  <%= button_to t("helpers.submit.delete"),
                @publisher,
                method: :delete,
                class: %w[btn btn-primary],
                data: { turbo_confirm: t("helpers.dialog.delete", id: @publisher.id) } %>
</div>
