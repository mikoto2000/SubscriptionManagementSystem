<p style="color: green"><%= notice %></p>

<h1><%= SubscriberPayment.model_name.human %></h1>

<%= render @subscriber_payment %>

<div>
  <%= link_to t("view.show.move_to_update", model: SubscriberPayment.model_name.human), edit_subscriber_payment_path(@subscriber_payment) %> |
  <%= link_to t("view.show.move_to_index", model: SubscriberPayment.model_name.human.pluralize), subscriber_payments_path %>

  <%= button_to t("helpers.submit.delete"),
                @subscriber_payment,
                method: :delete,
                class: %w[btn btn-primary],
                data: { turbo_confirm: t("helpers.dialog.delete", id: @subscriber_payment.id) } %>
</div>
