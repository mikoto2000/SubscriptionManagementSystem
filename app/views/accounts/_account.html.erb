<div id="<%= dom_id account %>">
  <table class="table table-hover">
    <tr>
      <td>
        <strong>Id:</strong>
      </td>
      <td>
        <%= account.id %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>
          <%= Account.human_attribute_name(:name) %>
        </strong>
      </td>
      <td>
        <%= account.name %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>
          <%= Account.human_attribute_name(:email) %>
        </strong>
      </td>
      <td>
        <%= account.email %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>
          <%= Account.human_attribute_name(:publisher_id) %>
        </strong>
      </td>
      <td>
        <%= account.publisher.id %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>
          <%= Account.human_attribute_name(:subscriber_id) %>
        </strong>
      </td>
      <td>
        <%= account.subscriber.id %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>
          <%= Account.human_attribute_name(:created_at) %>
        </strong>
      </td>
      <td>
        <%= account.created_at && l(account.created_at) %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>
          <%= Account.human_attribute_name(:updated_at) %>
        </strong>
      </td>
      <td>
        <%= account.updated_at && l(account.updated_at) %>
      </td>
    </tr>
  </table>
</div>
