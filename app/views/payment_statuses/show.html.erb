<p style="color: green"><%= notice %></p>

<h1><%= PaymentStatus.model_name.human %></h1>

<%= render @payment_status %>

<div>
  <%= link_to t("view.show.move_to_update", model: PaymentStatus.model_name.human), edit_payment_status_path(@payment_status) %> |
  <%= link_to t("view.show.move_to_index", model: PaymentStatus.model_name.human.pluralize), payment_statuses_path %>

  <%= button_to t("helpers.submit.delete"),
                @payment_status,
                method: :delete,
                class: %w[btn btn-primary],
                data: { turbo_confirm: t("helpers.dialog.delete", id: @payment_status.id) } %>
</div>
