<p style="color: green"><%= notice %></p>

<h1><%= Subscriber.model_name.human %></h1>

<%= render @subscriber %>

<div>
  <%= link_to t("view.show.move_to_update", model: Subscriber.model_name.human), edit_subscriber_path(@subscriber) %> |
  <%= link_to t("view.show.move_to_index", model: Subscriber.model_name.human.pluralize), subscribers_path %>

  <%= button_to t("helpers.submit.delete"),
                @subscriber,
                method: :delete,
                class: %w[btn btn-primary],
                data: { turbo_confirm: t("helpers.dialog.delete", id: @subscriber.id) } %>
</div>
