<%= form_with(model: publisher_payment, html: { class: %w[form-control form-control-sm] }) do |form| -%>
  <%- if publisher_payment.errors.any? -%>
  <div style="color: red">
    <h2><%= t("errors.template.header", model: PublisherPayment.model_name.human, count: publisher_payment.errors.count) %></h2>

    <ul>
    <% publisher_payment.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <%- end -%>
    </ul>
  </div>
  <%- end -%>

  <%- if publisher_payment.persisted? -%>
  <div>
    <%= form.label :id, style: "display: block" %>
    <div class="ps-2">
      <%= form.number_field :id, class: %w[form-control form-control-sm], disabled: true %>
    </div>
  </div>
  <%- end -%>
  <div>
    <%= form.label :month_for_payment, style: "display: block" %>
    <div class="ps-2">
      <%= form.date_field :month_for_payment, class: %w[form-control form-control-sm] %>
    </div>
  </div>
  <div>
    <%= form.label :payment_date, style: "display: block" %>
    <div class="ps-2">
      <%= form.date_field :payment_date, class: %w[form-control form-control-sm] %>
    </div>
  </div>
  <div>
    <%= form.label PublisherPayment.reflect_on_association(:payment_status).foreign_key %>
    <div class="ps-2">
      <%= form.collection_select(
            PublisherPayment.reflect_on_association(:payment_status).foreign_key,
            PublisherPayment.reflect_on_association(:payment_status).klass.all,
            :id,
            :name,
            { include_blank: "選択なし" }
          ) %>
    </div>
  </div>
  <div>
    <%= form.label PublisherPayment.reflect_on_association(:publisher).foreign_key %>
    <div class="ps-2">
      <%= form.collection_select(
            PublisherPayment.reflect_on_association(:publisher).foreign_key,
            PublisherPayment.reflect_on_association(:publisher).klass.all,
            :id,
            :name,
            { include_blank: "選択なし" }
          ) %>
    </div>
  </div>
  <%- if publisher_payment.persisted? -%>
  <div>
    <%= form.label :created_at, style: "display: block" %>
    <div class="ps-2">
      <%= form.datetime_field :created_at, class: %w[form-control form-control-sm], disabled: true %>
    </div>
  </div>
  <div>
    <%= form.label :updated_at, style: "display: block" %>
    <div class="ps-2">
      <%= form.datetime_field :updated_at, class: %w[form-control form-control-sm], disabled: true %>
    </div>
  </div>
  <%- end -%>
  <div>
    <%= form.submit class: %w[btn btn-primary] %>
  </div>
<% end %>
